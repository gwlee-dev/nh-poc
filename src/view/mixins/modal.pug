                .modal-header
                    h5#datasetModalLabel.modal-title 데이터셋 선택
                    button.btn-close(
                        type="button",
                        data-bs-toggle="modal",
                        data-bs-target="#scheduleModal"
                    )
                .modal-body
                    .input-group.mb-3
                        span#basic-addon1.input-group-text 데이터셋
                        select#script.form-select
                            option(selected="") 선택
                            option(value="1") One
                            option(value="2") Two
                            option(value="3") Three
                    .w-100.overflow-auto
                        +table("checkbox")

                .modal-footer
                    button.btn.btn-secondary(
                        type="button",
                        data-bs-toggle="modal",
                        data-bs-target="#scheduleModal"
                    ) 취소

